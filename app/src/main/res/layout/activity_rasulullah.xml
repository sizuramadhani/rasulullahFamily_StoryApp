<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rasulullah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mada.ceritakeluargarasulullah.rasulullah">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Rasulullah Sallalluhu Alaihi Wassalam"
       android:textSize="20dp"
       android:gravity="center"
       android:textColor="#B71C1C"
       android:layout_marginTop="10dp"
       android:id="@+id/txtrasul"/>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/rasulullah"
        android:layout_below="@+id/txtrasul"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgrasul"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgrasul"
        android:textSize="15dp"
        android:text="@string/Rasulullah"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
</ScrollView>
